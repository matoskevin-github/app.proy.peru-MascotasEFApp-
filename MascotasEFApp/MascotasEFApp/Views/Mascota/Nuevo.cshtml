@model MascotasEFApp.Models.MASCOTA

@{
    ViewBag.Title = "Nuevo";
}
<h2>Nueva Mascota</h2>
<hr />
<form action="@Url.Action("Nuevo","Mascota")" method="post">
    <div class="form-group">
        <label>Id</label>
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(x => x.NOMBRE, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Raza</label>
        @Html.TextBoxFor(x => x.RAZA, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Edad</label>
        @Html.TextBoxFor(x => x.EDAD, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Nombre Dueño</label>
        @Html.TextBoxFor(x => x.NOMBREDUENO, new { @class = "form-control", required = "required" })
    </div>

    <div>
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a href="@Url.Action("Index","Mascota")" class="btn btn-danger">Regresar</a>
    </div>




</form>

